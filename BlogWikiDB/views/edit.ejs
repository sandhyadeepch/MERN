<%- include("partials/header"); -%>

<h1>Edit Post</h1>
<form class="" action="/posts/edit/<%=postID%>" method="post">
  <div class="form-group">
    <label>Title</label>
    <input class="form-control" type="text" name="postTitle" required="true" value="<%=title%>">
    <label>Post</label>
    <textarea class="form-control" name="postBody" rows="5" cols="30"><%=content%></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="button" >Update</button>

 
  <a class="btn btn-primary" href="/posts/delete/<%=postID%>" onclick="return confirm('Are you sure want to delete post <%=postID%>?')">Delete
</a>
  </form>
<%- include("partials/footer"); -%>
